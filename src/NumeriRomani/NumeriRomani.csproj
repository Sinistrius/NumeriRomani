<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <AssemblyName>Sinistrius.$(MSBuildProjectName)</AssemblyName>
    <RootNamespace>Sinistrius.$(MSBuildProjectName.Replace(" ", "_"))</RootNamespace>
    <GeneratePackageOnBuild>False</GeneratePackageOnBuild>
    <Title>$(AssemblyName)</Title>
    <Authors>Sinistrius</Authors>
    <Company>Carsten Linke</Company>
		<Version>1.0.1</Version>
    <Description>A .NET library for dealing with Roman numerals</Description>
    <PackageReadmeFile>Readme.md</PackageReadmeFile>
    <RepositoryUrl>https://github.com/Sinistrius/NumeriRomani.git</RepositoryUrl>
    <PackageTags>Roman; numerals; conversion</PackageTags>
    <ApplicationIcon>NumeriRomani.ico</ApplicationIcon>
    <PackageIcon>NumeriRomani.png</PackageIcon>
    <PackageLicenseFile>legalcode.txt</PackageLicenseFile>
    <Copyright>Copyright (c) Carsten Linke 2023</Copyright>
  </PropertyGroup>

  <ItemGroup>
    <Content Include="NumeriRomani.ico" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\..\legalcode.txt">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
    <None Include="..\..\NumeriRomani.png">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
    <None Include="..\..\Readme.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

</Project>
